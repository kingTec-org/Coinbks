<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/neibubeijing" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:background="@color/neibubeijing">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:onClick="back"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:scaleType="centerInside"
                android:src="@mipmap/arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="@dimen/size_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/neibubeijing"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请向以下账户付款"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="请等待付款"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_45"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_20"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/size_50"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系对方" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/javabeijing"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingRight="@dimen/size_10"
                    android:text="已付款"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_12" />

                <TextView
                    android:id="@+id/all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/size_5"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingRight="@dimen/size_10"
                    android:text="买家已付款，请核实后确认"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/size_10" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:background="@color/javabeijing"
            android:paddingLeft="@dimen/size_10"
            android:layout_marginTop="@dimen/size_20"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:id="@+id/panduan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="交易总额"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/zonge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="￥0"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:background="@color/javabeijing"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="买家"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
            <TextView
                android:id="@+id/maijia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12122121"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:paddingLeft="@dimen/size_10"
            android:background="@color/javabeijing"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="单价"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/m3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="111"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="下单时间"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/m4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="买家"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:paddingLeft="@dimen/size_10"
            android:background="@color/javabeijing"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="数量"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:paddingLeft="@dimen/size_10"
            android:background="@color/javabeijing"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="下单时间"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/sjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:paddingLeft="@dimen/size_10"
            android:background="@color/javabeijing"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="联系方式"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/lianx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_35"
            android:paddingLeft="@dimen/size_10"
            android:background="@color/javabeijing"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="参考号"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/chankao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:paddingLeft="@dimen/size_10"
            android:background="@color/javabeijing"
            android:paddingRight="@dimen/size_10">

            <TextView
                android:id="@+id/queren"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:background="@color/neibubeijing"
                android:gravity="center"
                android:text="确认已收款"
                android:textColor="@color/black"
                android:textSize="@dimen/size_12" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>