<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/javabeijing"
    android:id="@+id/ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/neibubeijing"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:scaleType="centerInside"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:onClick="back"
                android:src="@mipmap/arrow_left" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        android:textColor="@color/color_text_black"
        android:textSize="25dp"
        android:text="身份认证"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_gray"
        android:layout_marginTop="@dimen/size_20"
        android:paddingLeft="@dimen/size_20"
        android:textSize="@dimen/size_14"
        android:text="国家或地区"/>
    <TextView
        android:id="@+id/addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        android:layout_marginTop="@dimen/size_10"
        android:paddingLeft="@dimen/size_20"
        android:textSize="@dimen/size_14"
        android:textStyle="bold"
        android:text="中国大陆"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        android:layout_marginTop="@dimen/size_10"
        android:paddingLeft="@dimen/size_20"
        android:textSize="@dimen/size_14"
        android:text="姓名"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/javabeijing"
        android:textSize="@dimen/size_14"
        android:paddingLeft="@dimen/size_20"
        android:hint="请输入你的名字"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:background="@color/neibubeijing"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text_black"
        android:layout_marginTop="@dimen/size_10"
        android:paddingLeft="@dimen/size_20"
        android:textSize="@dimen/size_14"
        android:text="身份证号"/>
    <EditText
        android:id="@+id/numname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/javabeijing"
        android:textSize="@dimen/size_14"
        android:paddingLeft="@dimen/size_20"
        android:hint="请输入身份证号"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:background="@color/neibubeijing"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/color_line_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="20dp">
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line_gray"/>
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/size_10"
            android:src="@mipmap/zhengjianbj1"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line_gray"/>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/size_10"
            android:src="@mipmap/zhengjianbj2"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line_gray"/>
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/size_10"
            android:src="@mipmap/zhengjianbj3"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_line_gray"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0.1"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="20dp"
        android:background="@color/color_line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/bwhite"
            android:textSize="@dimen/size_14"
            android:text="身份证正面"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/bwhite"
            android:textSize="@dimen/size_14"
            android:text="身份证背面"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/bwhite"
            android:textSize="@dimen/size_14"
            android:text="手持身份证"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:background="@color/blue"
        android:layout_margin="@dimen/size_20"
        android:textSize="16dp"
        android:text="下一步"
        android:gravity="center"
        android:textColor="@color/black"/>
</LinearLayout>