<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/javabeijing"
    android:id="@+id/ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/javabeijing">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:scaleType="centerInside"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_10"
                android:onClick="back"
                android:src="@mipmap/arrow_left" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        android:textColor="@color/zhuce"
        android:textSize="25dp"
        android:text="重置密码"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="22dp"
        android:layout_marginTop="@dimen/size_5"
        android:paddingRight="@dimen/size_20"
        android:textColor="@color/color_text_gray"
        android:textSize="12dp"
        android:text="6—20个字符"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14"
            android:background="@color/javabeijing"
            android:maxLength="11"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:hint="请您输入密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/password"
            android:layout_marginTop="@dimen/size_1"
            android:background="@color/chart_grid_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/passwords"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14"
            android:ellipsize="end"
            android:background="@color/javabeijing"
            android:paddingLeft="10dp"
            android:hint="请您再次输入密码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/passwords"
            android:layout_marginTop="@dimen/size_1"
            android:background="@color/chart_grid_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/yanzheng"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14"
            android:background="@color/javabeijing"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:hint="请输入验证码"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/yanzheng"
            android:layout_marginTop="@dimen/size_1"
            android:background="@color/chart_grid_line"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="@dimen/size_16"
        android:textColor="@color/black"
        android:text="完成"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/button_blue"/>
</LinearLayout>