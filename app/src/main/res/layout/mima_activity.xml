<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neibubeijing"
    android:id="@+id/ll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/neibubeijing"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"  />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:scaleType="centerInside"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:onClick="back"
                android:src="@mipmap/arrow_left" />
        </RelativeLayout>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="设置密码"/>
    <TextView
        android:id="@+id/dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:text="中国大陆"/>
</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="22dp"
        android:layout_marginTop="@dimen/size_5"
        android:paddingRight="@dimen/size_20"
        android:textColor="@color/color_text_gray"
        android:textSize="12dp"
        android:text="6—20个字符，不可以是纯粹数字"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_50"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14"
            android:background="@color/javabeijing"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:hint="请输入密码"/>
        <ImageView
            android:id="@+id/yan"
            android:layout_width="@dimen/size_25"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5"
            android:src="@mipmap/cb_normaled"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_5"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:background="@color/color_line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:id="@+id/passwords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14"
            android:ellipsize="end"
            android:background="@color/javabeijing"
            android:paddingLeft="5dp"
            android:hint="请再次输入密码"/>
        <ImageView
            android:id="@+id/yan2"
            android:layout_width="@dimen/size_25"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_5"
            android:src="@mipmap/cb_normaled"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_5"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:background="@color/color_line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:id="@+id/yanzheng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14"
            android:background="@color/javabeijing"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:hint="验证码"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:background="@color/color_line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:id="@+id/yaoqing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/size_14"
            android:background="@color/javabeijing"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:hint="邀请码"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:background="@color/color_line_gray"/>
    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="@dimen/size_16"
        android:textColor="@color/black"
        android:text="注册"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/text_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/size_10">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:padding="@dimen/size_10"
            android:src="@mipmap/xieyino"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12"
            android:text="我已阅读并同意"/>
        <TextView
            android:id="@+id/xieyitv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/size_12"
            android:gravity="center"
            android:textColor="@color/blue"
            android:text="《用户协议》"/>
    </LinearLayout>
</LinearLayout>